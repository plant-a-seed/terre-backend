{
  "name": "terre-telegram-bot",
  "version": "1.0.0",
  "description": "The telegram bot of Terre",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "transpile:bot": "tsc -p bot",
    "transpile": "npm run transpile:bot",
    "start": "node --loader esm-module-alias/loader dist/bot",
    "serve": "npm run transpile:bot && npm start",
    "lint:bot": "eslint bot --ext ts --format codeframe",
    "lint:bot:fix": "eslint bot --ext ts --format codeframe --fix",
    "lint": "npm run lint:bot",
    "lint:fix": "npm run lint:bot:fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plant-a-seed/terre-backend.git"
  },
  "author": "Eugenio Vinicio Berretta <euberdeveloper@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/plant-a-seed/terre-backend/issues"
  },
  "homepage": "https://github.com/plant-a-seed/terre-backend#readme",
  "aliases": {
    "@": "./dist/bot"
  },
  "devDependencies": {
    "@euberdeveloper/eslint-plugin": "^2.5.0",
    "@types/node": "^20.2.5",
    "eslint": "^8.41.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "dotenv": "^16.1.3",
    "esm-module-alias": "^2.0.3",
    "euberlog": "^2.5.1",
    "redis": "^4.6.7",
    "telegraf": "^4.12.2"
  }
}
